<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/iLayoutInfoUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="#97FFC107"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textTitleInfoUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:text="Sobre mí:"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/avatarUserImageProfileView"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="50dp"
                    android:layout_toLeftOf="@id/textTitleInfoUser"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.104"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/idButtonFollowUser"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@id/avatarUserImageProfileView"
                    android:backgroundTint="#FF9800"
                    android:onClick="followUser"
                    android:text="Seguir" />

                <TextView
                    android:id="@+id/idMainInfoUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="El usuario no ha escrito nada"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLayoutStatsUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/iLayoutInfoUser"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:text="Estadísticas del usuario:"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#97FFC107"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/idEditTotalProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="51dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="#03A9F4"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idTotalProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/idEditTotalProfile"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="50px"
                        android:textStyle="bold"
                        android:text="Total videojuegos" />

                    <TextView
                        android:id="@+id/idDaysProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEditDaysProfile"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="50px"
                        android:layout_toRightOf="@id/idTotalProfile"
                        android:textStyle="bold"
                        android:text="Días jugados" />

                    <TextView
                        android:id="@+id/idRateProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEditRateProfile"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@id/idDaysProfile"
                        android:textStyle="bold"
                        android:text="Puntuación media" />

                    <TextView
                        android:id="@+id/idEditDaysProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="167dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textColor="#03A9F4"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idEditRateProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="284dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textColor="#03A9F4"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLayoutFavGenres"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/idLayoutStatsUser"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:text="Géneros favoritos:"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#97FFC107"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/idEditGenre1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="51dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textColor="#03A9F4"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idGenre1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEditGenre1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="200px"
                        android:layout_marginBottom="20dp"
                        android:text="Género 1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idEditGenre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="167dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textColor="#03A9F4"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idGenre2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEditGenre2"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="200px"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@id/idGenre1"
                        android:text="Género 2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idEditGenre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="284dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="50px"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textColor="#03A9F4"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idGenre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEditGenre3"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@id/idGenre2"
                        android:text="Género 3"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLayoutFavGames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/idLayoutFavGenres"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:text="Videojuegos mejor puntuados:"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLayoutActivityProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/idLayoutFavGames"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:text="Actividad:"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>